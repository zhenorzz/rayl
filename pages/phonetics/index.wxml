              show-center-play-btn='{{false}}' 
              show-play-btn="{{true}}" 
              object-fit="contain"
              binderror="videoErrorCallback" 
            ></video>
          </view>
          <view style="text-align: center">
            <view style="margin: 10rpx 0;"><text>发音口型示范</text></view>
            <video 
              style="width:300rpx;height:280rpx"
              src="https://i.xiao84.com/en-yinbiao/lip-rounding-video/i1.mp4" 
